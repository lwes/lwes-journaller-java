#!/bin/bash

JAVA_OPTS=${JAVA_OPTS:-"-XX:+UseParallelGC -Xms512m -Xmx512m -ea -server -DMulticastReceiveBufferSize=8388608"}

# Make sure we can run this script from any directory.
bin=`dirname "$0"`/..
bin=`cd "$bin"; pwd`

##
# Startup script for the java journaller.
##

for jar in ${bin}/lib/*.jar
do
  if [ -z $CP ]; then
    CP=${jar}
  else
    CP=${CP}:${jar}
  fi
done
CP=${CP}:${bin}/config

$JAVA_HOME/bin/java \
$JAVA_OPTS \
-Dcom.sun.management.jmxremote \
-Dcom.sun.management.jmxremote.port=9999 \
-Dcom.sun.management.jmxremote.authenticate=false \
-Dcom.sun.management.jmxremote.ssl=false \
-Dlog4j.configuration=log4j.xml \
-classpath $CP \
org.lwes.journaller.Journaller $@ &

# Pid file will be written in the current directory
echo $! > journaller.pid